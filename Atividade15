numero1 = float(input("Digite o primeiro número: "))
numero2 = float(input("Digite o segundo número: "))

# Recebe a operação desejada
operacao = input("Digite a operação (soma, subtração, multiplicação, divisão): ").strip().lower()

# Executa a operação desejada
if operacao == "soma":
    resultado = numero1 + numero2
    print(f"O resultado da soma é: {resultado}")
elif operacao == "subtração":
    resultado = numero1 - numero2
    print(f"O resultado da subtração é: {resultado}")
elif operacao == "multiplicação":
    resultado = numero1 * numero2
    print(f"O resultado da multiplicação é: {resultado}")
elif operacao == "divisão":
    if numero2 != 0:
        resultado = numero1 / numero2
        print(f"O resultado da divisão é: {resultado}")
    else:
        print("Erro: Divisão por zero não é permitida.")
else:
    print("Operação inválida. Por favor, escolha entre soma, subtração, multiplicação ou divisão.")